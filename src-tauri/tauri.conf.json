{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HydroScreen",
  "version": "1.1.0",
  "identifier": "com.hydroscreen.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
  "windows": [
        {
          "title": "HydroScreen",
          "width": 1200,
          "height": 800,
          "decorations": false,
          "transparent": true,
          "shadow": true,
          "visible": false, 
          "resizable": true,
          "fullscreen": false
        }
      ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
      "publisher": "UDPSendToFailed",
      "externalBin": [
      "binaries/lhm-bridge"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "installerIcon": "icons/icon.ico",
        "headerImage": "icons/icon.ico"
      }
    }
  }
}
